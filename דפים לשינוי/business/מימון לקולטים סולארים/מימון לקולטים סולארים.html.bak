<script>
(function() {
  'use strict';

  var ns = 'WPC_Loans_S7M4';
  if (window[ns]) return;
  window[ns] = true;

  var container = document.querySelector('.wpc-loans-s7m4-faq-container');
  if (!container) return;

  container.addEventListener('click', function(e) {
    var button = e.target.closest('[data-action="toggle-faq"]');
    if (!button) return;

    var item = button.closest('.wpc-loans-s7m4-faq-item');
    if (!item) return;

    var isActive = item.classList.contains('active');

    // Close all items
    var allItems = container.querySelectorAll('.wpc-loans-s7m4-faq-item');
    allItems.forEach(function(faqItem) {
      faqItem.classList.remove('active');
    });

    // Open clicked item if it wasn't active
    if (!isActive) {
      item.classList.add('active');
    }
  });
})();
</script>

